 <icecast>
      <location>Earth</location>
      <admin>admin@localhost</admin>

      <!-- SECURITY: Use strong passwords - CHANGE THESE! -->
      <limits>
          <clients>100</clients>
          <sources>4</sources>
          <queue-size>524288</queue-size>
          <client-timeout>30</client-timeout>
          <header-timeout>15</header-timeout>
          <source-timeout>10</source-timeout>
          <burst-on-connect>1</burst-on-connect>
          <burst-size>65535</burst-size>
      </limits>

      <!-- SECURITY: Authentication - Use environment variables -->
      <authentication>
          <source-password>${ICECAST_SOURCE_PASSWORD}</source-password>
          <relay-password>${ICECAST_RELAY_PASSWORD}</relay-password>
          <admin-user>admin</admin-user>
          <admin-password>${ICECAST_ADMIN_PASSWORD}</admin-password>
      </authentication>

      <!-- Use your domain or IP -->
      <hostname>localhost</hostname>

      <!-- Port 20001 as requested -->
      <listen-socket>
          <port>20001</port>
          <bind-address>0.0.0.0</bind-address>
      </listen-socket>

      <!-- SECURITY: Disable directory listings -->
      <fileserve>0</fileserve>

      <!-- Jazz mountpoint -->
      <mount>
          <mount-name>/jazz</mount-name>
          <username>jazz_source</username>
          <password>${JAZZ_SOURCE_PASSWORD}</password>
          <stream-name>Jazz Radio Station</stream-name>
          <stream-description>24/7 Jazz Music</stream-description>
          <stream-url>http://localhost</stream-url>
          <genre>Jazz</genre>
          <bitrate>128</bitrate>
          <type>application/ogg</type>
          <charset>UTF-8</charset>
          <public>0</public>
          <max-listeners>50</max-listeners>
          <fallback-mount>/silence.ogg</fallback-mount>
          <fallback-override>1</fallback-override>
          <no-yp>1</no-yp>
      </mount>

      <!-- Rock mountpoint -->
      <mount>
          <mount-name>/rock</mount-name>
          <username>rock_source</username>
          <password>${ROCK_SOURCE_PASSWORD}</password>
          <stream-name>Rock Radio Station</stream-name>
          <stream-description>24/7 Rock Music</stream-description>
          <stream-url>http://localhost</stream-url>
          <genre>Rock</genre>
          <bitrate>128</bitrate>
          <type>application/ogg</type>
          <charset>UTF-8</charset>
          <public>0</public>
          <max-listeners>50</max-listeners>
          <fallback-mount>/silence.ogg</fallback-mount>
          <fallback-override>1</fallback-override>
          <no-yp>1</no-yp>
      </mount>

      <!-- SECURITY: Paths -->
      <paths>
          <basedir>/usr/share/icecast2</basedir>
          <logdir>/var/log/icecast2</logdir>
          <webroot>/usr/share/icecast2/web</webroot>
          <adminroot>/usr/share/icecast2/admin</adminroot>
          <alias source="/" dest="/status.xsl"/>
      </paths>

      <!-- SECURITY: Logging -->
      <logging>
          <accesslog>access.log</accesslog>
          <errorlog>error.log</errorlog>
          <loglevel>3</loglevel>
          <logsize>10000</logsize>
      </logging>

      <!-- SECURITY: Disable unnecessary features -->
      <security>
          <chroot>0</chroot>
          <changeowner>
              <user>icecast2</user>
              <group>icecast</group>
          </changeowner>
      </security>
  </icecast>
